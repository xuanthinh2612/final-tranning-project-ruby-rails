<h1>Category</h1>

<% if @category.errors.any? %>
  <% @category.errors.full_messages.each do |msg| %>
    <ul>
      <li> <%= msg %></li>
    </ul>
  <% end %>
<% end %>


<div class="row">
  <div class="col-xs-12">

    <%= form_for(@category, :html => { class: "form-horizontal", role: "form" }) do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 ">
          <!--          thay doi Create or Create in-->
          <%= f.submit(@category.new_record? ? "Create" : "Update", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>

    <% end %>
    <div class="col-xs-4 col-xs-offset-4 ">
      <%= link_to "Back to list", articles_path %>

    </div>


  </div>
</div>
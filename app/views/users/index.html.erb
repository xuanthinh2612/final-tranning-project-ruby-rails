<h1 align="center">All User Bloggers</h1>

<div align="center">
  <%= will_paginate %>
</div>
<div align="center">
  <%= @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %> <%= "| (Admin)" if user.admin? %>
          </li>
          <li><small>
            <%= pluralize(user.articles.count, "article") if user.articles %>
          </small></li>
          <% if logged_in? && current_user.admin? && current_user != user %>
            <div class="article-actions">
              <%= button_to "Delete Account", user_path(user), :method => "delete", data: { confirm: "Are you sure" },
                            class: "btn btn-xs btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>

</div>
<div align="center">
  <%= will_paginate %>
</div>



